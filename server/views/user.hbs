{{#IF page.type '==' 'signup' }}
    <div class="container">
        <div id="app">
            <form action="/user/create" method="post" class="form-login">
                <input type="email" required name="email" placeholder="email">
                <input type="password" required name="password" placeholder="pass">
                <button type="submit">submit</button>
            </form>
        </div>
    </div>
{{/IF}}

{{#IF page.type '==' 'login' }}
<div class="container">
    <div id="app">
        <form action="/user/login" method="post" class="form-login">
            <input type="email" required name="email" placeholder="email">
            <input type="password" required name="password" placeholder="pass">
            <button type="submit">submit</button>
        </form>
    </div>
</div>
{{/IF}}
